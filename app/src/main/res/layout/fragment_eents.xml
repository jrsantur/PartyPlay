<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.workgroup.party.views.fragments.EventsFragment">

    <com.mingle.widget.LoadingView
        android:id="@+id/loadView"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />


    <com.project.workgroup.partyplay.views.custom_views.AutofitRecyclerView
        android:id="@+id/fragment_event_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:columnWidth="@dimen/item_event_width"
        />


</FrameLayout>
